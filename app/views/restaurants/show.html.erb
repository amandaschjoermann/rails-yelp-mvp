<div class="container">
  <div class="row">
    <div class="col-xs-offset-2 col-xs-8">
      <h1 class="text-center">This is the page for <%= @restaurant.name %></h1>
      <h4>Reviews:</h4>
      <ul>
        <% @restaurant.reviews.each do |review| %>
        <li> Rating: <%= review.rating %> | <%= review.content %> </li>
        <% end %>
      </ul>
      <%= link_to "Add a review", new_review_path(@restaurant), class: "btn btn-primary" %>
      <ul>
        <li> Category: <%= @restaurant.category %>  </li>
        <li> Address: <%= @restaurant.address %> </li>
      </ul>
      <%= link_to "Back to home", restaurants_path, class: "btn btn-primary" %>
    </div>
  </div>
</div>
